<p id="notice"><%= notice %></p>
<h1><%= @movie.name %></h1>
<h2>by <%= @movie.author.email %></h2>
<p>Rating: <%= @movie.rating %></p>
<p><%= @movie.description %></p>
<p>
  Categories:
  <%= render partial: 'movies/category', collection: @movie.categories %>
</p>
<%= link_to 'Source', @movie.url %>

<%= form_tag movie_vote_path(@movie.id), method: :patch do %>
  <%= number_field_tag :rating, @movie.rating, in: 0..100, step: 1 %>
  <%= submit_tag 'Vote!' %>
<% end %>

<div class="flex">
  <%= button_to 'Delete', @movie, method: 'delete', class: 'offset-right--xs' %>
  <%= link_to 'Edit', edit_movie_path(@movie) %>
</div>
